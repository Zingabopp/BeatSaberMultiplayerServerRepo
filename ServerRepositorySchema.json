{
  "$schema": "https://json-schema.org/draft-03/schema",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "RepositoryName": {
      "type": "string",
      "required": true
    },
    "RepositoryDescription": {
      "type": "string"
    },
    "Servers": {
      "type": "array",
      "required": true,
      "items": {
        "$ref": "#/definitions/Server"
      }
    }
  },
  "definitions": {
    "Server": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ServerName": {
          "type": "string",
        },
        "ServerAddress": {
          "type": "string",
          "required": true
        },
        "ServerPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "required": true
        }
      },
      "title": "Server"
    }
  }
}
